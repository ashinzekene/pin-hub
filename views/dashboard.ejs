        <main class="col-sm-12 col-md-12 pt-3">
          <h1 class="d-inline-block">Dashboard</h1>
          <div class="d-inline float-right">
            <button class="btn col-sm-12 btn-lg btn-danger delete-used-btn">Delete USED PINS</button>
          </div>
          <section class="row text-center placeholders">
            <div class="col-md-4 col-sm-12 placeholder">
              <!-- <img src="data:image/gif;base64,R0lGODlhAQABAIABAAJ12AAAACwAAAAAAQABAAACAkQBADs=" width="200" height="200" class="img-fluid rounded-circle" alt="Generic placeholder thumbnail"> -->
              <h4 class="display-4"><%= total %> PINS</h4>
              <div class="text-muted">Something else</div>
            </div>
            <div class="col-md-4 col-sm-12 placeholder">
              <!-- <img src="data:image/gif;base64,R0lGODlhAQABAIABAADcgwAAACwAAAAAAQABAAACAkQBADs=" width="200" height="200" class="img-fluid rounded-circle" alt="Generic placeholder thumbnail"> -->
              <h4 class="display-4"><%= used %> Used PINS</h4>
              <span class="text-muted">Something else</span>
            </div>
            <div class="col-md-4 col-sm-12 placeholder">
              <!-- <img src="data:image/gif;base64,R0lGODlhAQABAIABAAJ12AAAACwAAAAAAQABAAACAkQBADs=" width="200" height="200" class="img-fluid rounded-circle" alt="Generic placeholder thumbnail"> -->
              <h4 class="display-4"><%= total - used %> Unused PINS</h4>
              <span class="text-muted">Something else</span>
            </div>
           
          </section>
            <div class="progress" style="border-radius: 1rem">
              <div class="progress-bar progress-bar-striped primary" style="height: 1.5rem; width: <%= Math.floor(((total-used)/total)*100) %>%" role="progressbar" aria-valuenow="<%= Math.floor(((total-used)/total)*100) %>" aria-valuemin="0" aria-valuemax="100"></div>
              <div class="progress-bar progress-bar-striped bg-danger" style="height: 1.5rem; width: <%= Math.ceil((used/total)*100) %>%" role="progressbar" aria-valuenow="<%= Math.ceil((used/total)*100) %>" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          <div class="my-4">
            <h3 id="generate">Generate Pins</h3>
            <form method="post" class="form md-3 row" action="/user/generate">
              <div class="form-group py-2 col-sm-12 col-md-4">
                <label for="no-of-pins">Number of pins to generate </label>
                <input required="required" class="form-control mx-2" type="number" max="100" name="number" id="no-of-pins">
              </div>
              <div class="form-group py-2 col-sm-12 col-md-4">
                <label for="pin-value">The PIN category/ unique id</label>
                <input required="required" class="form-control mx-2" type="text" name="category" id="pin-value">
              </div>
              <div class="form-group py-2 col-sm-12 col-md-4">
                <label for="pin-value">The PIN price in &#x20a6;</label>
                <input required="required" class="form-control mx-2" type="number" name="value" id="pin-value">
              </div>
              <button class="btn btn-success mx-2">Generate</button>
            </form>
          </div>
          <div class="my-4">
            <h3>Validate PIN</h3>
            <form method="get" class="row" action="/validate">
              <div class="col-xs-12 col-sm-4"> 
                <input class="form-control m-2" type="text" name="pin" required="required" placeholder="enter PIN">
              </div>
              <div class="col-xs-12 col-sm-4"> 
                <input class="form-control m-2" type="text" name="value" required="required" placeholder="PIN value">
              </div>
              <div class="col-xs-12 col-sm-4"> 
                <input class="form-control m-2" type="text" name="category" required="required" placeholder="category">
              </div>
              <button class="btn btn-primary mx-2">Validate</button>
            </form>
          </div>
          <h2>PINS</h2>
          <div class="table-responsive">
            <form class="form-marked" method="post" action="/user/selected/">
              <table class="table table-striped data-table">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>PIN</th>
                    <th>Used</th>
                    <th>Value</th>
                    <th>Category</th>
                    <th>Date generated</th>
                  </tr>
                </thead>
                <tbody>
                <% pins.forEach(function(pin) {%>
                  <tr>
                    <td><input value="<%= pin.id %>" class="form-control form-control-lg" type="checkbox" name="marked"></td>
                    <td><div class="h6"><%= pin.pin %></div></td>
                    <% if (pin.used == 'true') { %>
                      <td><div class="badge badge-danger">USED</div></td>
                    <% } else { %>
                      <td><div class="badge badge-success">UNUSED</div></td>
                    <% } %>
                    <td>&#x20a6;<%= pin.value %></td>
                    <td><%= pin.category %></td>
                    <td><%= pin.date.toString().substring(0,24) %></td>
                    <td><button class="delete btn btn-danger" data-id="<%= pin.id %>">Delete</button></td>
                  </tr>
                <% }) %>
                </tbody>
              </table>
            </form>
          </div>
          <ul class="nav nav-pills mb-3 edit">
            <li class="nav-item">
              <a class="nav-link btn-outline-primary selected" data-type="delete-multiple" href="#">Delete Selected</a>
            </li>
            <li class="nav-item">
              <a class="nav-link btn-outline-primary selected" data-type="unused-multiple" href="#">Make Selected Unused</a>
            </li>
            <li class="nav-item">
              <a class="nav-link btn-outline-primary selected" data-type="used-multiple" href="#">Make Selected Used</a>
            </li>
            <li class="nav-item">
              <a class="nav-link btn-outline-primary disabled" href="#">Disabled</a>
            </li>
          </ul>
          <nav class="center-block" aria-label="Page navigation">
            <ul class="pagination">
              <!-- <li class="page-item"><a class="page-link" href="#">Previous</a></li> -->
              <% for(i=1;i <= Math.ceil(total/20) ;i++) { %>
              <li class="page-item"><a class="page-link" href="/user?page=<%=i%>"><%= i %></a></li>
              <% } %>
              <!-- <li class="page-item"><a class="page-link" href="#">Next</a></li> -->
            </ul>
          </nav>
